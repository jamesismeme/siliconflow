// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Token管理表
model Token {
  id           Int       @id @default(autoincrement())
  name         String
  value        String
  isActive     Boolean   @default(true) @map("is_active")
  usageToday   Int       @default(0) @map("usage_today")
  limitPerDay  Int       @default(1000) @map("limit_per_day") // RPM限制：每分钟最大请求数
  lastUsedAt   DateTime? @map("last_used_at")
  createdAt    DateTime  @default(now()) @map("created_at")
  updatedAt    DateTime  @updatedAt @map("updated_at")

  // 关联的调用日志
  callLogs CallLog[]

  @@map("tokens")
}

// 调用日志表
model CallLog {
  id           Int      @id @default(autoincrement())
  tokenId      Int?     @map("token_id")
  modelName    String   @map("model_name")
  success      Boolean
  responseTime Int?     @map("response_time") // 响应时间(毫秒)
  inputTokens  Int?     @map("input_tokens")  // 输入token数
  outputTokens Int?     @map("output_tokens") // 输出token数
  errorMessage String?  @map("error_message")
  userAgent    String?  @map("user_agent")
  ipAddress    String?  @map("ip_address")
  createdAt    DateTime @default(now()) @map("created_at")

  // 关联的Token
  token Token? @relation(fields: [tokenId], references: [id], onDelete: SetNull)

  @@map("call_logs")
}

// 用户设置表
model UserSetting {
  id            Int      @id @default(autoincrement())
  userId        String   @map("user_id") // 用户标识(可以是IP或session)
  customApiUrl  String?  @map("custom_api_url")
  apiKey        String?  @map("api_key") // 加密存储
  defaultModel  String?  @map("default_model")
  preferences   String?  // 用户偏好设置(JSON字符串)
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  @@map("user_settings")
  @@unique([userId])
}

// 系统统计表
model SystemStats {
  id              Int      @id @default(autoincrement())
  date            DateTime // 统计日期
  totalCalls      Int      @default(0) @map("total_calls")
  successfulCalls Int      @default(0) @map("successful_calls")
  failedCalls     Int      @default(0) @map("failed_calls")
  totalTokens     Int      @default(0) @map("total_tokens")
  avgResponseTime Float?   @map("avg_response_time")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  @@map("system_stats")
  @@unique([date])
}

// 模型使用统计表
model ModelStats {
  id              Int      @id @default(autoincrement())
  modelName       String   @map("model_name")
  date            DateTime
  callCount       Int      @default(0) @map("call_count")
  successCount    Int      @default(0) @map("success_count")
  totalTokens     Int      @default(0) @map("total_tokens")
  avgResponseTime Float?   @map("avg_response_time")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  @@map("model_stats")
  @@unique([modelName, date])
}

// 管理员账户表
model AdminUser {
  id             Int       @id @default(autoincrement())
  username       String    @unique
  passwordHash   String    @map("password_hash")
  isActive       Boolean   @default(true) @map("is_active")
  lastLoginAt    DateTime? @map("last_login_at")
  loginAttempts  Int       @default(0) @map("login_attempts")
  lockedUntil    DateTime? @map("locked_until")
  createdAt      DateTime  @default(now()) @map("created_at")
  updatedAt      DateTime  @updatedAt @map("updated_at")

  @@map("admin_users")
}
